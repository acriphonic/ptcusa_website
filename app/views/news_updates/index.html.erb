<% provide(:title, 'News') %>

<div class="newsText">
  <%= image_tag("layout/newsClip.png") %>
  <p>At Pyramid we are constantly developing our range of products and services. Watch this page for information on new products, product applications and software releases.</p>

  <% if signed_in? %><center><%= link_to 'Add a News Story', new_news_update_path %></center>
  <br><br><% end %>

  <% @news_updates.each do |news_update| %>
    <div class="newsBox">
      <div class="newsTitle"><%= news_update.title %></div>
      <div class="newsDate"><%= news_update.date.to_s(:long)  %> in <%= news_update.location %></div>
      <div class="column"><%= simple_format(news_update.news) %></div>
      <div class="column"><br><%= image_tag("news/" + news_update.picture, class: "newsImage") %></div>
      <% if signed_in? %><div class="align-right"><%= link_to 'Edit', edit_news_update_path(news_update) %> | <%= link_to 'Destroy', news_update, method: :delete, data: { confirm: 'Are you sure?' } %></div><% end %>
    </div>
  <% end %>
</div>